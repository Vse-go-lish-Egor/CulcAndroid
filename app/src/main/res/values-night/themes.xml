<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyBtnPurple" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:layout_margin">20sp</item>
        <item name="android:onClick">onClickOperation</item>
        <item name="android:textAlignment">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="MyBtnWhite" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_margin">20sp</item>
        <item name="android:onClick">onClickEquals</item>
        <item name="android:textAlignment">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="MyBtnGray" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:layout_margin">20sp</item>
        <item name="android:onClick">onClickNum</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="MyBtnGreen" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:layout_margin">20sp</item>
        <item name="android:onClick">onClickShowAll</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="MyBtnOrange" parent="Theme.AppCompat">
        <item name="android:onClick">showExtend</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:layout_margin">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
