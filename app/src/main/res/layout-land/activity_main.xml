<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:weightSum="1"
        android:layout_margin="10dp"
        >

        <TextView
            android:clickable="false"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:id="@+id/editText"
            android:layout_weight="0.4"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:autoSizeTextType="uniform"
            android:gravity="end" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="C"
                android:background = "@drawable/rounded_button"
                android:theme="@style/MyBtnPurple"
                android:layout_marginHorizontal="3sp"/>

            <Button
                android:id="@+id/btnBack"
                android:layout_marginHorizontal="3sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="del"
                android:background = "@drawable/rounded_button"
                android:theme="@style/MyBtnPurple"/>
            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:textStyle="bold"
                android:layout_marginHorizontal="3sp"
                android:textSize="30sp"
                android:text="/"
                android:background = "@drawable/rounded_button"
                android:theme="@style/MyBtnPurple"/>
            <Button
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.15"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="x"
            android:layout_marginHorizontal="3sp"
            android:background = "@drawable/rounded_button"
            android:theme="@style/MyBtnPurple"/>
            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:background = "@drawable/rounded_button"
                android:text="-"
                android:layout_marginHorizontal="3sp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:theme="@style/MyBtnPurple" />
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:textStyle="bold"
                android:layout_marginHorizontal="3sp"
                android:textSize="30sp"
                android:text="+"
                android:background = "@drawable/rounded_button"
                android:theme="@style/MyBtnPurple"/>
            <Button
                android:id="@+id/btnEquals"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="3sp"
                android:textStyle="bold"
                android:background = "@drawable/rounded_button"
                android:textSize="30sp"
                android:text="="
                android:textColor="@color/gray"
                android:theme="@style/MyBtnWhite"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btnSeven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="7"
                android:background = "@drawable/rounded_button"
                android:theme="@style/MyBtnGray"
                android:layout_marginHorizontal="3sp"/>
            <Button
            android:id="@+id/btnEight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="8"
            android:background = "@drawable/rounded_button"
            android:theme="@style/MyBtnGray"
            android:layout_marginHorizontal="3sp"/>
            <Button
            android:id="@+id/btnNine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="9"
            android:background = "@drawable/rounded_button"
            android:layout_marginHorizontal="3sp"
            android:theme="@style/MyBtnGray"/>
            <Button
            android:id="@+id/btnSin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="3sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:text="sin"
            android:textSize="20sp"
            android:textStyle="italic"
            android:theme="@style/MyBtnOrange" />
            <Button
                android:id="@+id/btnCos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="cos"
                android:textSize="20sp"
                android:textStyle="italic"
                android:theme="@style/MyBtnOrange" />

            <Button
                android:id="@+id/btnTan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="tan"
                android:textSize="20sp"
                android:textStyle="italic"
                android:theme="@style/MyBtnOrange" />
            <Button
                android:id="@+id/btnPow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="^"
                android:textSize="30sp"
                android:textStyle="italic"
                android:theme="@style/MyBtnOrange" />
            <Button
                android:id="@+id/btnFact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="n!"
                android:textSize="30sp"
                android:textStyle="italic"
                android:theme="@style/MyBtnOrange" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btnFour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background = "@drawable/rounded_button"
                android:textSize="30sp"
                android:layout_marginHorizontal="3sp"
                android:textStyle="bold"
                android:text="4"
                android:theme="@style/MyBtnGray"
                />


            <Button
                android:id="@+id/btnFive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="5"
                android:layout_marginHorizontal="3sp"
                android:background = "@drawable/rounded_button"
                android:theme="@style/MyBtnGray"/>


            <Button
                android:id="@+id/btnSix"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginHorizontal="3sp"
                android:text="6"
                android:background = "@drawable/rounded_button"
                android:theme="@style/MyBtnGray"/>
            <Button
                android:id="@+id/btnLn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="ln"
                android:textSize="25sp"
                android:textStyle="italic"
                android:theme="@style/MyBtnOrange" />

            <Button
                android:id="@+id/btnBracketOpen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="("
                android:textSize="25sp"
                android:textStyle="italic"
                android:theme="@style/MyBtnOrange" />

            <Button
                android:id="@+id/btnBracketClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text=")"
                android:textSize="25sp"
                android:textStyle="italic"
                android:theme="@style/MyBtnOrange" />
            <Button
                android:id="@+id/btnPi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="π"
                android:textSize="20sp"
                android:textStyle="italic"
                android:theme="@style/MyBtnOrange" />
            <Button
                android:id="@+id/btnPercentages"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="%"
                android:textSize="20sp"
                android:textStyle="italic"
                android:theme="@style/MyBtnOrange" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btnOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textStyle="bold"
                android:layout_marginHorizontal="3sp"
                android:background = "@drawable/rounded_button"
                android:textSize="30sp"
                android:text="1"
                android:theme="@style/MyBtnGray"/>


            <Button
                android:id="@+id/btnTwo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background = "@drawable/rounded_button"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginHorizontal="3sp"
                android:text="2"
                android:theme="@style/MyBtnGray"/>


            <Button
                android:id="@+id/btnThree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="3"
                android:layout_marginHorizontal="3sp"
                android:background = "@drawable/rounded_button"
                android:theme="@style/MyBtnGray"/>
            <Button
                android:id="@+id/btnZero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginHorizontal="3sp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="0"
                android:background = "@drawable/rounded_button"
                android:theme="@style/MyBtnGray"/>
            <Button
                android:id="@+id/btnDecimal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3sp"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_button"
                android:text="."
                android:textSize="30sp"
                android:textStyle="bold"
                android:theme="@style/MyBtnGray" />

            <Button
                android:id="@+id/btnSquareRoot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="√"
                android:textSize="20sp"
                android:textStyle="italic"
                android:theme="@style/MyBtnOrange" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>